<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:lineSpacingMultiplier="1.5"
        android:text="Appino SDK v."
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStore"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#4CAF50"
            android:text="فروشگاه (تمام صفحه)"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStoreBottomSheet"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:backgroundTint="#AEB847"
            android:text="فروشگاه"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRecharge"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:backgroundTint="#FF9800"
            android:text="خرید شارژ"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnBill"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:backgroundTint="#2196F3"
            android:text="پرداخت قبض"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>